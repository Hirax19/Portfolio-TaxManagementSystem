@model IEnumerable<TaxManagementSystem.Models.Income>

@{
    ViewData["Title"] = "Income/Expense List";
}

<h1>Income/Expense List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.SourceSortParam">Source</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.AmountSortParam">Amount</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.DateSortParam">Date</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.ClientSortParam">Client</a>
            </th>
            <th>Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@(item.IsExpense ? "text-danger" : "text-success")">
                <td>@Html.DisplayFor(modelItem => item.Source)</td>
                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>@Html.DisplayFor(modelItem => item.Client)</td>
                <td>@(item.IsExpense ? "Expense" : "Income")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
